@{
    ViewBag.Title = "Home";
}

@if (ViewBag.hasBank == false)
{
    <div class="row">
        <div class="col-md-4 col-md-push-5">
            <a href="@Url.Action("Create", "BankAccount")" class="btn btn-primary"><i class="fa fa-bank"></i> Create Bank Account</a>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6 col-md-push-3 margin-top-20">
            <a href="@Url.Action("Details", "BankAccount")" class="btn btn-primary btn-large btn-block"><span class="glyphicon glyphicon-question-sign"></span> Balance Inquiry</a>
            @Html.Action("Withdrawal", "BankAccount")
            @*Transfer Money to other Accounts (low priority)*@
        </div>
    </div>
}